" show incomplete commands
set showcmd
" show tab menu
set wildmenu
" scrolloff for z enter
set scrolloff=5
"highlight search
set hlsearch
set incsearch
"line numbers
set number
set linebreak
"smart indent
set smartindent

set expandtab
set autoindent

" Code folding
" The line below folds upon line indents. Sometimes thats not good though,
" thats why I use SimpylFold
"set foldmethod=indent
"set foldlevel=99

set encoding=utf-8
let python_highlight_all=1
syntax on
